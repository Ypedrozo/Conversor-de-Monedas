import java.io.IOException;
import java.net.http.HttpClient;
import java.net.http.HttpRequest;
import java.net.http.HttpResponse;
import java.net.URI;
import org.json.JSONObject;

public class CurrencyConverter {

    private static final String API_KEY = "YOUR_API_KEY"; // Reemplaza con tu API KEY de exchangeRate-Api
    private static final String BASE_URL = "https://v6.exchangerate-api.com/v6/";

    public static double convert(String from, String to, double amount) throws IOException, InterruptedException {
        String url = BASE_URL + API_KEY + "/pair/" + from + "/" + to;

        HttpClient client = HttpClient.newHttpClient();
        HttpRequest request = HttpRequest.newBuilder().uri(URI.create(url)).build();

        HttpResponse<String> response = client.send(request, HttpResponse.BodyHandlers.ofString());

        JSONObject json = new JSONObject(response.body());

        if (!json.getString("result").equals("success")) {
            throw new RuntimeException("Error en la API: " + json.getString("error-type"));
        }

        double rate = json.getDouble("conversion_rate");
        return amount * rate;
    }

    public static void main(String[] args) {
        try {
            String from = "USD";
            String to = "EUR";
            double amount = 100;

            double result = convert(from, to, amount);
            System.out.println(amount + " " + from + " = " + result + " " + to);

        } catch (Exception e) {
            System.out.println("Error: " + e.getMessage());
        }
    }
}
